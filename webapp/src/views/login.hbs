<link rel="stylesheet" href="/styles/login.css">

<form action="/login" class="login customLogin" method="POST">
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <label for="inputEmail" class="sr-only">Klasse</label>
      <input name="Klasse" type="text" id="inputEmail" class="form-control" placeholder="Klasse" required autofocus>
      <label for="inputPassword" class="sr-only">Passwort</label>
      <input name="Pass" type="password" id="inputPassword" class="form-control" placeholder="Passwort" required>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Eingeloggt bleiben
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
</form>